<div class="container text-center">
  <div class="row justify-content-center">
    <div class="col-3 card" style="width: 18rem;">
      <div class="card-body">
        <h2 class="card-title" class="card-header">Leaderboard</h2>

        <div class="mb-3">
          <ul class="list-group list-group-flush">
            {{#each players as |player|}}
            <li class="list-group-item">{{player.username}} {{player.cash}}</li>
            {{/each}}
          </ul>
        <a href="/api/game" class="btn btn-primary mt-3">Play Again!</a>
        <a href="/" class="btn btn-primary mt-3">Logout</a>
      </div>
    </div>
  </div>
</div>